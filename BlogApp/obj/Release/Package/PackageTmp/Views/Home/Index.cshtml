@{
    ViewBag.Title = "Simple Blog Application";
}

<div>
    <h1>Simple Blog Application</h1>
    <p class="lead">by Travis Miller</p>
</div>

<div class="row">
    <button class="btn-primary" style="margin-bottom: 20px; margin-left: 10px;">Add New Blog</button>
    @Html.ActionLink("Add New Blog", "Create", "Home");

    @foreach (var entry in ViewBag.Blogs)
    {
        <div class="jumbotron" style="width: 100%;">
            <h2>@entry.Title</h2>
            <small>@entry.CreationDate</small>
            <p>@entry.Content</p>

            @Html.ActionLink("Continue Reading", "DetailView", "Home", new { blogPostId = entry.ID }, null)
        </div>
    }

</div>